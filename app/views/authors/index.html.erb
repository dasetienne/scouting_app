<h1>The New And Amazing Player Database</h1>

<h1>I am the Author homepage</h1>

<%= link_to "Create a new Author", new_author_path %>

<br />
<br />

<table>
   <tr>
     <th>First Name</th>
     <th>Last Name</th>
     <th>Edit</th>
     <th>Delete</th>
   </tr>
   <tbody>
     <% @authors.each do |author| %>
       <tr>
         <td><%= link_to(author.first_name, author_path(author)) %></td>
         <td><%= author.last_name %></td>
         <td><%= link_to "edit", edit_author_path(author) %></td>
        <td><%= link_to "delete", author_path(author), method: :delete, data: {confirm: "Do you really want to delete this author?"}%></td>
        </tr>
     <% end %>
   </tbody>
 </table> 