<!DOCTYPE html>
<html>
<head>
  <title>ScoutingApp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<% flash.each do |name, msg| %>
<div class="<%= name %>">
<%= msg %>
</div>
<% end %>

    <nav class="navbar navbar-inverse navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="http://localhost:3000/">Scout.me</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <form class="navbar-form navbar-right">
            <div class="form-group">
              <%= form_tag(players_path, :method => "get", id: "search-form") do %>
              <%= text_field_tag :search, params[:search], placeholder: "Search Players" %>
              <button type="submit" class="btn btn-success">Submit</button>

              <% end %>

            
            </form>
          </div>
        </div>
      </nav>

    <%= render 'partials/jumbotron' %>

    <div class="container">
      <%= yield %>

      <hr>

      <footer>
        <p>&copy; The number one scouting app!</p>
      </footer>
    </div> <!-- /container -->

</body>
</html>
