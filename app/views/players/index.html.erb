<h1>Scout.me</h1>

<h1>Discover the biggest talents in German soccer</h1>

<%= link_to "Create a New Player", new_player_path %>
<%= link_to "Create a New Team", new_team_path %>

<br />
<br />
<table>
  <tr>
    <th></th>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Position</th>
    <th>Team</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>
  <tbody>
    <% @players.each do |player| %>
      <tr>
        
        <td><%= image_tag player.photo.url(:small) %></td>
        <td><%= link_to(player.first_name, player_path(player)) %></td>
        <td><%= player.last_name %></td>
        <td><%= player.position.name %></td>

        <td><%= player.team.name %></td>
        <td><%= link_to "edit", edit_player_path(player) %></td>
        <td><%= link_to "delete", player_path(player), method: :delete, data: {confirm: "Really want to delete this baller?"}%></td>
      </tr>
    <% end %>
  </tbody>
  </table>

<% form_tag players_path, :method => 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

