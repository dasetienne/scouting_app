<%= form_for @player do |f| %>

  <% if @player.errors.any? %>
    <% @player.errors.full_messages.each do |message| %>
      <p><%= message %></p>
    <% end %>
  <% end %>

  <p>
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </p>

    <p>
    <%= f.label :number %><br>
    <%= f.text_field :number %>
  </p>

   <p>
    <%= f.label :height %><br>
    <%= f.text_field :height %>
  </p>

   <p>
    <%= f.label :weight %><br>
    <%= f.text_field :weight %>
  </p>

   <p>
    <%= f.label :position %><br>
    <%= f.text_field :position %>
  </p>

   <p>
    <%= f.label :team %><br>
    <%= f.text_field :team %>
  </p>
  



  <p>
    <%= f.label :bio %><br>
    <%= f.text_area :bio %>
  </p>

  <p>
    <%= f.label :author %><br>
    <%= collection_select(:player, :author_id, Author.all, :id, :last_name, include_blank: true) %>
  </p>


  <%= f.submit %>
<% end %>
